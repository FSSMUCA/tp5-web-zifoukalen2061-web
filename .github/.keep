Exercice 3:
let n = Number(prompt("Entrez un nombre : "));

if (n < 0) {
    console.log("Nombre négatif");
} else {
    if (n <= 10) {
        console.log("Petit");
    } else {
        if (n <= 50) {
            console.log("Moyen");
        } else {
            if (n <= 100) {
                console.log("Grand");
            } else {
                console.log("Très grand");
            }
        }
    }
}

exercice 4:
let min = Number(prompt("Entrez le nombre minimal : "));
let max = Number(prompt("Entrez le nombre maximal : "));

for (let i = min; i <= max; i++) {
    if (i % 3 === 0 && i % 5 === 0) {
        console.log(i + " : Five&Three");
    } else if (i % 3 === 0) {
        console.log(i + " : Three");
    } else if (i % 5 === 0) {
        console.log(i + " : Five");
    } else {
        console.log(i);
    }
}

