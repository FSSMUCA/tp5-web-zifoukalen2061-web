exercice 6:
let sommePairs = 0;
let sommeImpairs = 0;

for (let i = 1; i <= 50; i++) {
    if (i % 2 === 0) {
        sommePairs += i;
    } else {
        sommeImpairs += i;
    }
}

console.log("Somme des pairs :", sommePairs);
console.log("Somme des impairs :", sommeImpairs);

exercice 7:
function verifierMotDePasse(mdp) {
    return mdp.length >= 8 && mdp.includes("@");
}

let mdp = prompt("Entrez un mot de passe : ");

if (verifierMotDePasse(mdp)) {
    console.log("Mot de passe valide");
} else {
    console.log("Mot de passe non valide");
}

exercice 8:
function totalAvecRemise(total, remise) {
    return total - (total * remise / 100);
}

let total = Number(prompt("Entrez le total HT : "));
let remise = Number(prompt("Entrez la remise (%) : "));

let resultat = totalAvecRemise(total, remise);
console.log("Total final :", resultat);

exercice 9:
function factorielle(n) {
    if (n === 0) return 1;
    return n * factorielle(n - 1);
}

console.log(factorielle(5)); // 120

exercice 10 :
function sommeIterative(n) {
    let s = 0;
    for (let i = 1; i <= n; i++) {
        s += i;
    }
    return s;
}

